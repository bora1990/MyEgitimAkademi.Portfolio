@model List<MyEgitimAkademi.Portfolio.Models.Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yetenek Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>
            Skill Id
        </th>
        <th>
            Skill Title
        </th>
        <th>
            Skill Value
        </th>

        <th>
            Hizmet Sil
        </th>
        <th>
            Hizmet Güncelle
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillID</td>
            <td>@item.SkillTitle</td>
            <td>@item.SkillValue</td>

            <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Skill/AddSkill/" class="btn btn-outline-primary">Yeni Yetenek Girişi</a>

